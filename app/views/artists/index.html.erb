<% Time.zone = "Pacific Time (US & Canada)" %>

<h1>Jamtracker</h1>

<% @artists.each do |artist| %>
	<h2><%= artist.name %></h2>

(<%= link_to 'Sync Now', sync_artist_path(artist) %> <%= link_to 'Edit', edit_artist_path(artist) %> <%= link_to 'Delete', artist, method: :delete, data: { confirm: 'Are you sure?' } %>)<br/><br/>

	<% artist.jams.order("jam_creation_date").reverse.each do |jam| %>
		<%= jam.jam_creation_date.strftime("%B %e, %Y at %I:%M%p") %>: <A href="http://thisismyjam.com/<%= jam.jam_username %>"><%= jam.jam_username %></a> jammed "<%= jam.jam_title %>" <%= link_to '(delete)', jam, method: :delete, data: { confirm: 'Are you sure?' } %><BR/>
	<% end %>

<% end %>

<br />

<%= link_to 'Track A New Artist', new_artist_path %> | <%= link_to 'Sync All Artists Now', sync_all_artists_path %>
